{
  "extends": "@chatie/tsconfig",
  "ts-node": {
    "transpileOnly": true
  },
  "compilerOptions": {
    "noUnusedParameters": false,
    "outDir": "dist/esm",
  },
  "exclude": [
    "node_modules/",
    "dist/",
    "tests/fixtures/"
  ],
  "include": [
    "app/**/*.ts",
    "bin/*.ts",
    "bot/**/*.ts",
    "examples/**/*.ts",
    "scripts/**/*.ts",
    "src/**/*.ts",
    "tests/**/*.spec.ts"
, "session-file.ts"  ],
}
